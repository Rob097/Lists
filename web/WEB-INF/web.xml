<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filters.AuthenticationFilter</filter-class>
    </filter>
    <context-param>
        <description>The path where the user avatar images are stored.</description>
        <param-name>avatarsFolder</param-name>
        <param-value>/Image/AvatarImg</param-value>
    </context-param>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.WebAppListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LogoutAction</servlet-name>
        <servlet-class>log.LogoutAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAction</servlet-name>
        <servlet-class>log.LoginAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterAction</servlet-name>
        <servlet-class>log.RegisterAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>users.deleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateUser</servlet-name>
        <servlet-class>users.updateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateShopList</servlet-name>
        <servlet-class>ShopList.CreateShopList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShareShopListServlet</servlet-name>
        <servlet-class>ShopList.ShareShopListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowShopList</servlet-name>
        <servlet-class>ShopList.ShowShopList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>ShopList.chat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteShopList</servlet-name>
        <servlet-class>ShopList.DeleteShopList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewProductToDataBase</servlet-name>
        <servlet-class>ShopList.AddNewProductToDataBase</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>Products.DeleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteSharedUsers</servlet-name>
        <servlet-class>ShopList.DeleteSharedUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductToList</servlet-name>
        <servlet-class>ShopList.AddProductToList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setPID</servlet-name>
        <servlet-class>ShopList.setPID</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutAction</servlet-name>
        <url-pattern>/restricted/LogoutAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/LoginAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterAction</servlet-name>
        <url-pattern>/RegisterAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/restricted/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateUser</servlet-name>
        <url-pattern>/restricted/updateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateShopList</servlet-name>
        <url-pattern>/CreateShopList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShareShopListServlet</servlet-name>
        <url-pattern>/restricted/ShareShopListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowShopList</servlet-name>
        <url-pattern>/ShowShopList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteShopList</servlet-name>
        <url-pattern>/DeleteShopList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewProductToDataBase</servlet-name>
        <url-pattern>/AddNewProductToDataBase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/DeleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteSharedUsers</servlet-name>
        <url-pattern>/restricted/DeleteSharedUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductToList</servlet-name>
        <url-pattern>/AddProductToList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setPID</servlet-name>
        <url-pattern>/setPID</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/homepage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
